{
  "name": "raceday",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "cd app && vite",
    "dev:full": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "build": "npm run prebuild && npm run build:frontend && npm run build:copy",
    "build:frontend": "cd app && vite build",
    "build:copy": "npm run db:generate && cp -r app/dist/* public/ 2>/dev/null || true && cp -r data/* public/data/ 2>/dev/null || true",
    "preview": "cd app && vite preview",
    "prebuild": "mkdir -p public/data dist && cp -f public/health.json public/ 2>/dev/null || true",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "server:prod": "NODE_ENV=production node server.js",
    "start": "npm run server:prod",
    "db:generate": "cd api/prisma && npx prisma generate",
    "db:migrate": "cd api/prisma && npx prisma migrate dev",
    "db:migrate:prod": "cd api/prisma && npx prisma migrate deploy",
    "db:push": "cd api/prisma && npx prisma db push",
    "db:seed": "cd api/prisma && node seed.js",
    "db:studio": "cd api/prisma && npx prisma studio",
    "db:reset": "cd api/prisma && npx prisma migrate reset --force",
    "db:init": "npm run db:migrate && npm run db:seed",
    "db:setup:dev": "cp api/prisma/schema.dev.prisma api/prisma/schema.prisma && npm run db:init",
    "db:setup:prod": "cp api/prisma/schema.postgres.prisma api/prisma/schema.prisma",
    "deploy:prepare": "node scripts/prepare-deployment.js",
    "clean": "rm -rf dist app/dist node_modules/.vite",
    "deps:update": "npm update",
    "lint": "eslint . --ext .vue,.js,.ts",
    "lint:fix": "eslint . --ext .vue,.js,.ts --fix",
    "format": "prettier --write .",
    "typecheck": "cd app && vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@supabase/supabase-js": "^2.55.0",
    "@vueuse/core": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pinia": "^2.2.6",
    "vue": "^3.5.18",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.1.5",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.22.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.1",
    "prettier": "^3.2.5",
    "prisma": "^6.15.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "typescript": "^5.6.0",
    "vite": "^7.1.2",
    "vitest": "^1.3.1",
    "vue-tsc": "^2.1.10"
  }
}
